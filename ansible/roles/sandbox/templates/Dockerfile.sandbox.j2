FROM openclaw-sandbox:bookworm-slim

# --- Layer 1: System packages ---
# Some packages may already exist in base image; listed explicitly for reproducibility
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    coreutils \
    # Text processing
    grep \
    sed \
    gawk \
    # Pager
    less \
    # File discovery & archives
    findutils \
    tar \
    gzip \
    unzip \
    # Network
    curl \
    wget \
    ca-certificates \
    openssh-client \
    # Version control
    git \
    # JSON processing
    jq \
    # Directory visualization
    tree \
    # Build tools (needed for pip packages with native extensions)
    build-essential \
    # Process monitoring
    htop \
    # Terminal multiplexer
    tmux \
    # Media processing
    ffmpeg \
    imagemagick \
    # Python 3
    python3 \
    python3-pip \
    python3-venv \
    # Node.js (via Debian packages)
    nodejs \
    npm \
  && rm -rf /var/lib/apt/lists/*

# --- Layer 2: Strip setuid bits to prevent privilege escalation ---
# -xdev avoids descending into /proc, /sys, and other virtual filesystems
RUN find / -xdev -perm /4000 -type f -exec chmod u-s {} +

# --- Layer 3: ripgrep v14.1.1 (Debian bookworm ships 13.0.0; install newer from GitHub) ---
RUN ARCH=$(dpkg --print-architecture) && \
    case "$ARCH" in \
      amd64) RG_ARCH="x86_64-unknown-linux-musl" ;; \
      arm64) RG_ARCH="aarch64-unknown-linux-gnu" ;; \
      *) echo "Unsupported arch: $ARCH" && exit 1 ;; \
    esac && \
    curl -fsSL "https://github.com/BurntSushi/ripgrep/releases/download/14.1.1/ripgrep-14.1.1-${RG_ARCH}.tar.gz" \
      | tar xz --strip-components=1 -C /usr/local/bin "ripgrep-14.1.1-${RG_ARCH}/rg" && \
    rg --version

# --- Layer 4: Unprivileged user ---
RUN (getent group 1000 || groupadd -g 1000 node) && \
    (id -u 1000 2>/dev/null || useradd -u 1000 -g 1000 -m -s /bin/bash node)

USER 1000
RUN git config --global user.name "OpenClaw Agent" && \
    git config --global user.email "openclaw@localhost"
USER root
