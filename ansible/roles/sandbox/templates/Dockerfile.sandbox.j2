FROM openclaw-sandbox:trixie

# --- Layer 1: System packages ---
# Some packages may already exist in base image; listed explicitly for reproducibility
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    coreutils \
    # Text processing
    grep \
    sed \
    gawk \
    # Pager
    less \
    # File discovery & archives
    findutils \
    fd-find \
    tar \
    gzip \
    unzip \
    # Network
    curl \
    wget \
    ca-certificates \
    openssh-client \
    # Version control
    git \
    git-lfs \
    # Search & data processing
    ripgrep \
    jq \
    sqlite3 \
    # Document conversion
    pandoc \
    # Command runner (available in Debian 13+)
    just \
    # Directory visualization
    tree \
    # Build tools (needed for pip packages with native extensions)
    build-essential \
    # Process monitoring
    htop \
    # Terminal multiplexer
    tmux \
    # Media processing
    ffmpeg \
    imagemagick \
    # Python 3
    python3 \
    python3-pip \
    python3-venv \
    # Node.js (via Debian packages)
    nodejs \
    npm \
    # Locale support (prevents Python encoding errors, inconsistent sort order)
    locales \
  && ln -s /usr/bin/fdfind /usr/local/bin/fd \
  && git lfs install --system \
  && (apt-get purge -y gh || true) \
  && sed -i 's/# en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/' /etc/locale.gen \
  && locale-gen \
  && rm -rf /var/lib/apt/lists/*

ENV LANG=en_US.UTF-8 LC_ALL=en_US.UTF-8

# --- Layer 2: uv + uvx (official Docker method — https://docs.astral.sh/uv/guides/integration/docker/) ---
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /usr/local/bin/

# --- Layer 3: yq (official Docker method — https://github.com/mikefarah/yq) ---
COPY --from=mikefarah/yq:latest /usr/bin/yq /usr/local/bin/yq

# --- Layer 4: beads (bd) — AI-native issue tracker ---
RUN curl -fsSL "https://github.com/steveyegge/beads/releases/download/v{{ beads_version }}/beads_{{ beads_version }}_linux_amd64.tar.gz" \
    | tar -xz -C /usr/local/bin bd
# bd 0.55.4 links against ICU 74; Debian trixie ships ICU 76. Symlink all three sonames.
RUN ln -sf /usr/lib/x86_64-linux-gnu/libicui18n.so.76  /usr/lib/x86_64-linux-gnu/libicui18n.so.74  \
 && ln -sf /usr/lib/x86_64-linux-gnu/libicuuc.so.76    /usr/lib/x86_64-linux-gnu/libicuuc.so.74    \
 && ln -sf /usr/lib/x86_64-linux-gnu/libicudata.so.76  /usr/lib/x86_64-linux-gnu/libicudata.so.74

# --- Layer 5: pnpm via corepack (recommended — https://pnpm.io/installation) ---
RUN npm install -g corepack@latest && corepack enable pnpm

# --- Layer 6: Package manager guardrails ---
# Nudge agents toward pnpm/uv instead of npm/pip for global installs
RUN printf '#!/bin/sh\n\
case "$1" in\n\
  install|i|add)\n\
    case "$*" in\n\
      *-g*|*--global*)\n\
        echo "npm global install disabled in sandbox. Use: pnpm add -g <package>" >&2\n\
        exit 1 ;;\n\
    esac ;;\n\
esac\n\
exec /usr/bin/npm "$@"\n' > /usr/local/bin/npm && chmod +x /usr/local/bin/npm \
 && printf '#!/bin/sh\n\
case "$1" in\n\
  install)\n\
    case "$*" in\n\
      *--user*|*-e*) ;;\n\
      *)\n\
        if [ -z "$VIRTUAL_ENV" ]; then\n\
          echo "pip global install disabled in sandbox. Use: uvx <tool> (one-off) or uv tool install <tool> (persistent)" >&2\n\
          exit 1\n\
        fi ;;\n\
    esac ;;\n\
esac\n\
exec /usr/bin/pip "$@"\n' > /usr/local/bin/pip && chmod +x /usr/local/bin/pip \
 && cp /usr/local/bin/pip /usr/local/bin/pip3 \
 && sed -i 's|/usr/bin/pip|/usr/bin/pip3|' /usr/local/bin/pip3

# --- Layer 7: Strip setuid bits to prevent privilege escalation ---
# Runs AFTER all package installs to cover apt, COPY --from, and binary downloads
# -xdev avoids descending into /proc, /sys, and other virtual filesystems
RUN find / -xdev -perm /4000 -type f -exec chmod u-s {} +

# --- Layer 8: Unprivileged user ---
RUN (getent group 1000 || groupadd -g 1000 node) && \
    (id -u 1000 2>/dev/null || useradd -u 1000 -g 1000 -m -s /bin/bash node)

USER 1000
RUN git config --global user.name "OpenClaw Agent" && \
    git config --global user.email "openclaw@localhost" && \
    git config --global include.path /workspace/.git-proxy-config && \
    git config --global alias.lg "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all"

ENV GIT_TERMINAL_PROMPT=0

# Stay as UID 1000 (not root). OpenClaw drops ALL capabilities via CapDrop=[ALL],
# so root has no DAC_OVERRIDE and can't write to workspace files owned by UID 1000.
# Running as UID 1000 directly matches the workspace file ownership.
